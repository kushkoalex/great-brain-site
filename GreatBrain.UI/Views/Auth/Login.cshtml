@using GreatBrain.UI
@model GreatBrain.UI.Controllers.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Great Brain — Вход в админку</title>
    <link href='https://fonts.googleapis.com/css?family=Ubuntu:300,300italic&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/Vendor/jquery-1.11.2.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css?v=@GreatBrainApp.Version" media="screen"/>
    <link rel="stylesheet" type="text/css" href="/Content/css/login.css?v=@GreatBrainApp.Version" media="screen" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="login-container">


            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div style="text-align: center">
                    <h4><span class="label label-danger">@Model.ErrorMessage</span></h4>
                </div>
            }

            <div class="logo"></div>
            <div class="login-title">
                система администрирования
            </div>

            <div class="form-wrapper">
                <form role="form">
                    <div class="form-group">
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Логин">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Пароль">
                    </div>
                    
                    <div class="rememberme">
                        @Html.CheckBoxFor(model => model.Keep) Запомнить меня
                    </div>
                    
                    <button type="submit" class="btn btn-default">Вход</button>
                </form>
            </div>
        </div> 
    }

    <script type="text/javascript">
        $(function () {
            $("#Name").focus();
        })
    </script>
</body>
</html>

